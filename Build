[build]
  # Default: publish directly from the repo root (useful if index.html is at repo root).
  publish = "."

  # If your project requires a build step (React/Vite/etc.), uncomment and set these:
  # command = "npm run build"
  # publish = "dist"  # Vite -> dist, Create React App -> build

# SPA fallback so client-side routing works
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
